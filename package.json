{
  "name": "coffee-crypto-cli",
  "version": "1.2.0",
  "description": "Cryptocurrency CLI price tool",
  "main": "dist/index.js",
  "author": "Gabe Olesen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zidious/crypto-cli"
  },
  "bin": {
    "crypto": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
