    "prepare": "npx husky install && yarn build",
    "precommit": "lint-staged"
  },
  "engines": {
    "node": ">=14"
  },
  "type": "module",
  "dependencies": {
    "@crypto-coffee/coingecko-api": "^1.2.0",
    "chalk": "5.1.2",
    "json2csv": "^5.0.7",
    "meow": "11"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/json2csv": "^5.0.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "chai": "^4.3.6",
    "eslint": "^8.25.0",
    "execa": "6.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{md,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "bitcoin",
    "cryptocurrency",
    "crypto",
    "crypto cli",
    "coingecko",
    "cli",
